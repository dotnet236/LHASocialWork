@inherits System.Web.Mvc.WebViewPage<LHASocialWork.Models.Account.CreateAccountViewModel>

@using System.Web.Mvc.Html
@using System.Web.Mvc

@{Html.EnableClientValidation();}
@using (Html.BeginForm(Model.FormPostAction ?? "Register", "Accounts", FormMethod.Post, new { @class = "formContainer tabbedFormValidation" }))
{       
    @Html.AntiForgeryToken();
    @Html.HiddenFor(x => x.ReturnUrl);
	<h2 style='text-align:center;'>Create Account</h2>
                      
    <div id="tabs">
        <ul>            
            <li><a href="#fragment-1"><span>Account</span></a></li>
            <li><a href="#fragment-2"><span>Name</span></a></li>
            <li><a href="#fragment-3"><span>Address</span></a></li>
        </ul>
        <div id="fragment-1">
            @Html.Editor("SystemInfo")
        </div>
        <div id="fragment-2">
            @Html.EditorFor(m => m.PersonInfo)            
        </div>
        <div id="fragment-3">
            @Html.EditorFor(m => m.Address)            
        </div>
    </div>
    
    <div class='submitButtonContainer' style='padding-left:216px;'>
       <div class='button'>
            @Html.ActionLink("Cancel", "Index")
       </div>
       <div class='button'>
            <input type="submit" value="Register" />
       </div>       
    </div>
}


<script type="text/javascript" src="@Url.Content("~/Scripts/jQuery.UI/jquery-ui-1.8.6.custom.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jQuery.Custom/LHA.FormValidation.js")"></script>
<script type="text/javascript">
    $(function () {
        $("#tabs").tabs();
    });
</script>

